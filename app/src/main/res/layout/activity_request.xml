<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    tools:context=".request">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="512dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Text_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스 선택"
                android:textSize="30dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/service_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/service1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="택배 / 장보기" />

                <RadioButton
                    android:id="@+id/service2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="청소 / 집안일" />

                <RadioButton
                    android:id="@+id/service3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="벌레 잡기" />

                <RadioButton
                    android:id="@+id/service4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공부 알려주기(과외)" />

                <RadioButton
                    android:id="@+id/service5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반려동물 케어" />

                <RadioButton
                    android:id="@+id/service6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타 etc" />
            </RadioGroup>

            <TextView
                android:id="@+id/Text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="제목"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/data_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="제목을 입력해주세요." />

            <TextView
                android:id="@+id/Text_pay_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="결제 방법"
                android:textSize="30dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/data_pay_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/pay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서비스 후 계좌이체" />

                <RadioButton
                    android:id="@+id/pay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="만나서 현금 지불" />
            </RadioGroup>

            <TextView
                android:id="@+id/Text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="주소"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/data_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="주소를 입력해주세요." />

            <TextView
                android:id="@+id/Text_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="선호 성별"
                android:textSize="30dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/data_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/gender1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="남성" />

                <RadioButton
                    android:id="@+id/gender2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="여성" />

                <RadioButton
                    android:id="@+id/gender3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="성별 무관" />
            </RadioGroup>

            <TextView
                android:id="@+id/Text_pay_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="심부름비"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/data_pay_bill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="금액을 입력해주세요."
                android:inputType="number" />

            <TextView
                android:id="@+id/Text_request_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="요청 사항"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/data_request_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="요청 사항을 입력해주세요."
                android:inputType="textLongMessage" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="의뢰요청"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>